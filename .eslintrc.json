{
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "semi": [2, "never"],
        "array-bracket-spacing": [2, "always"],
        "object-curly-spacing": [2, "always"],
        "no-unused-vars": 2,
        "eqeqeq": [1, "smart"],
        "comma-spacing": [2, { "before": false, "after": true }]

    }
}